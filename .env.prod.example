# Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Environment
ENVIRONMENT=production

# Database Configuration
USE_POSTGRES=true
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mykonos_db
DB_USER=mykonos_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Security (GENERATE STRONG RANDOM KEYS!)
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_JWT_SECRET

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mykonos.log

# Security
BCRYPT_LOG_ROUNDS=12

# CORS Configuration (adjust for your frontend domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis (optional)
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
