# ===========================================
# DATABASE CONFIGURATION - PRODUCTION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mykonos_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ===========================================
# APPLICATION CONFIGURATION - PRODUCTION
# ===========================================
APP_ENV=production
DEBUG=false
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# SERVER CONFIGURATION - PRODUCTION
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ===========================================
# SECURITY CONFIGURATION - PRODUCTION
# ===========================================
UPLOAD_FOLDER=/path/to/uploads
MAX_CONTENT_LENGTH=16777216

# ===========================================
# LOGGING CONFIGURATION - PRODUCTION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/path/to/logs/app.log


# ===========================================
# API-URL CONFIGURATION - PRODUCTION
# ===========================================
# Cloudflare Tunnel with API Subdomain (recommended)
API_URL=https://api.mykonosboutique.com.ar

# Alternative: With explicit port (if needed)
# API_URL=https://mykonosboutique.com.ar:1107/api
